{
  "manifest_version": 3,
  "name": "DOM Cleaner Extension",
  "version": "1.0",
  "description": "Remove specific tags and keep the desired structure on page load.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coupang.com/"],
      "js": ["dom-changer.js", "coupang/main-page.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.coupang.com/np/search*"],
      "js": ["dom-changer.js", "coupang/search-page.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.coupang.com/vp/products/*"],
      "js": ["dom-changer.js", "coupang/product-page.js"],
      "run_at": "document_idle"
    }
  ]
}
